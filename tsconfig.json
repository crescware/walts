{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "./dist",
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "node_modules"
  ]
}